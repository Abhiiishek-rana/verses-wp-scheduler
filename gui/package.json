{
  "name": "whatsapp-bot-gui",
  "version": "1.0.0",
  "description": "Modern GUI for WhatsApp Bot Configuration and Management",
  "main": "main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run dev -- --port 3001\" \"wait-on http://localhost:3001 && electron .\"",
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron-dev": "ELECTRON_IS_DEV=true electron .",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir"
  },
  "dependencies": {
    "@emotion/react": "^11.11.0",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.0",
    "@mui/material": "^5.15.0",
    "@mui/x-data-grid": "^6.18.0",
    "electron": "^28.0.0",
    "lucide-react": "^0.300.0",
    "qrcode": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "whatsapp-web.js": "^1.23.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^7.6.0",
    "electron-builder": "^24.9.1",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.whatsappbot.manager",
    "productName": "WhatsApp Bot Manager",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "main.js",
      "preload.js",
      "bot-gui-bridge.js",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
